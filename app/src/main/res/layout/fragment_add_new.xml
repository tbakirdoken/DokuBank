<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextnameSurname"
            style="@android:style/Widget.Material.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:hint="İsim Soyisim"
            android:inputType="text"
            android:textColor="@color/sweetprimary" />

        <TextView
            android:id="@+id/textViewLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Hastane Adı"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="@color/sweetprimary" />
        <Spinner
            android:id="@+id/city_spinner"
            style="@android:style/Widget.Material.Spinner.Underlined"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/sweetprimary"

            />
        <TextView
            android:id="@+id/textViewBloodType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Kan grubu"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="@color/sweetprimary" />


        <Spinner
            android:id="@+id/blood_spinner"
            style="@android:style/Widget.Material.Spinner.Underlined"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="@color/sweetprimary" />

        <TextView
            android:id="@+id/textViewdoku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Doku Tipi"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="@color/sweetprimary" />


        <Spinner
            android:id="@+id/doku_spinner"
            style="@android:style/Widget.Material.Spinner.Underlined"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="@color/sweetprimary" />

        <TextView
            android:id="@+id/textViewAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Hasta Yaşı"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="@color/sweetprimary" />
        <EditText
            android:id="@+id/editTextAge"
            style="@android:style/Widget.Material.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:inputType="text"
            android:textColor="@color/sweetprimary" />

    </LinearLayout>

</RelativeLayout>